{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "moduleDetection": "force",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@auth/*": [
                "src/features/auth/*"
            ],
            "@task/*": [
                "src/features/task/*"
            ],
            "@controller/*": [
                "src/controller/*"
            ],
            "@src/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src",
        "__test__"
    ]
}